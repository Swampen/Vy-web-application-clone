
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row text-center">
        <div class="col">
            <h2>Customers</h2>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table id="table" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th class="th-sm">
                            Station
                        </th>
                        <th class="th-sm">
                            Edit
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td>@s.Name</td>
                            <td class="text-center"><button type="button" class="btn btn-warning" data-toggle="modal" id="@s.Id" data-station="@s.Name" data-target="#edit">Edit</button></td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

