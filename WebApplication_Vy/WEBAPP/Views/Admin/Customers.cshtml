@model List<DAL.DTO.CustomerDto>

@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row text-center">
        <div class="col">
            <h2>Customers</h2>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table id="table" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model[0].Email)
                        </th>
                        <th></th>
                        <th style="display: none;"></th>
                        <th style="display: none;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => c.Email)
                            </td>
                            <td class="text-center">
                                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#edit@(c.Id)">Edit</button> |
                                <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#details@(c.Id)">Details</button> |
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-id="@c.Id" data-target="#delete">Delete</button>
                            </td>

                            @*Edit*@
                            <td class="modal fade" id="edit@(c.Id)" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Editing @c.Email</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <form action="/admin/updatecustomer" method="post">
                                            <div class="modal-body ml-1 mr-2">
                                                @Html.HiddenFor(model => c.Id)
                                                <div id="name" class="mt-2">
                                                    <div class="row">
                                                        <div class="col-12 p-0">
                                                            @Html.LabelFor(model => c.Givenname, new { @class = "control-label" })
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-12 col-md-6 p-0">
                                                            @Html.EditorFor(model => c.Givenname, new { htmlAttributes = new { id = "", placeholder = "Given name", @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => c.Givenname, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="col-12 col-md-6 p-0">
                                                            @Html.EditorFor(model => c.Surname, new { htmlAttributes = new { id = "", placeholder = "Surname", @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => c.Surname, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--End name-->
                                                <!--Email-->
                                                <div id="email" class="mt-2">
                                                    <div class="row">
                                                        <div class="col p-0">
                                                            @Html.LabelFor(model => c.Email, new { @class = "control-label" })
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col p-0">
                                                            @Html.EditorFor(model => c.Email, new { htmlAttributes = new { id = "", placeholder = "example@email.com", @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => c.Email, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--End email-->
                                                <!--Address-->
                                                <div id="address" class="mt-2">
                                                    <div class="row">
                                                        <div class="col p-0">
                                                            @Html.LabelFor(model => c.Address, new { @class = "control-label" })
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col p-0">
                                                            @Html.EditorFor(model => c.Address, new { htmlAttributes = new { id = "", placeholder = "Street address", @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => c.Address, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--End address-->
                                                <!--Postalcode-->
                                                <div id="post" class="mt-2">
                                                    <div class="row">
                                                        <div class="col p-0">
                                                            @Html.LabelFor(model => c.Zipcode.Postalcode, new { @class = "control-label" })
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-12 col-md-4 p-0">
                                                            @Html.EditorFor(model => c.Zipcode.Postalcode, new { htmlAttributes = new { placeholder = "Zipcode", id = "", @class = "postalcode form-control", data_id = @c.Id } })
                                                        </div>
                                                        <div class="col-12 col-md-8 p-0">
                                                            <input id="postaltown@(c.Id)" class="form-control" disabled />
                                                        </div>
                                                        @Html.ValidationMessageFor(model => c.Zipcode.Postalcode, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-success">Submit</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </td>

                            @*Details*@
                            <td class="modal fade" id="details@(c.Id)" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Details for @c.Email</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body" id="info@(c.Id)">
                                            <div class="row">
                                                <div class="col">
                                                    @c.Givenname @c.Surname
                                                </div>
                                            </div>
                                            <hr />
                                            <div class="row">
                                                <div class="col">
                                                    @c.Address, <br />
                                                    @c.Zipcode.Postalcode @c.Zipcode.Postaltown
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Deleting ticket?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this customer?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <a id="confirmBtn" href="" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {

        $('#table').DataTable({
            scrollY: 475
        });
        $('.dataTables_length').addClass('bs-select');
        $("#table_filter").parent().addClass("row")
        $("#table_filter").find("input").addClass("form-control");
        $("#table_filter").addClass("col-12 col-md-7 pt-2")
        $("#table_length").find("select").addClass("form-control");
        $("#table_length").addClass("col-12 col-md-5 pt-2")


        $(".postalcode").on('input', function () {
            let id = $(this)[0].dataset["id"]
            const postalcode = $(this).val();
            const jsonin = {
                Postalcode: postalcode
            };

            if (postalcode.match("[0-9]{4}")) {
                $.ajax({
                    url: "/home/searchzip",
                    type: 'POST',
                    data: JSON.stringify(jsonin),
                    contentType: "application/json;charset=utf-8",
                    success: function (response) {
                        console.log('setting postaltown');
                        $('#postaltown' + id).val(response);
                    }
                });
            } else {
                $('#postaltown').val("Undefined");
            }
        });

        $('#delete').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var id = button[0].dataset["id"];
            var modal = $(this);
            var info = $("#info" + id)
            info.addClass("border border-danger")
            modal.find(".modal-body").append(info)


            var url = `/admin/deleteCustomer?customerId=${id}`;
            modal.find("#confirmBtn").attr("href", url);
        });
    })
</script>
