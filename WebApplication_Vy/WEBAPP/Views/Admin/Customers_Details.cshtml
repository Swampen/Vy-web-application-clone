@model DAL.DTO.CustomerDto

<td class="modal fade" id="details@(Model.Id)" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Details for @Model.Email</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="info@(Model.Id)">
                <div class="row">
                    <div class="col-2 font-weight-bold">
                        @Html.LabelFor(model => Model.Givenname, new { @class = "control-label" })
                    </div>
                    <div class="col">
                        @Model.Givenname @Model.Surname
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-2 font-weight-bold">
                        @Html.LabelFor(model => model.Address, new { @class = "control-label" })
                    </div>
                    <div class="col">
                        @Model.Address, <br />
                        @Model.Zipcode.Postalcode @Model.Zipcode.Postaltown
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</td>