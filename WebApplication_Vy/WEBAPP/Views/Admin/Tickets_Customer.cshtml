@model DAL.DTO.CustomerDto


<td class="modal ticket-modal fade" id="tickets@(Model.Id)" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-lg modal modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Tickets for @Model.Email</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table id="tickets-table-@(Model.Id)" class="table tickets-table" cellspacing="0" width="100%">
                    <thead class="thead-dark">
                        <tr>
                            <th>Dep. Station</th>
                            <th>Arr. Station</th>
                            <th>Time</th>
                            <th>Duration</th>
                            <th>Price</th>
                            <th>Credit Card</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model.Tickets)
                        {
                            <tr>
                                <td class="font-weight-bold">@t.DepartureStation</td>
                                <td class="font-weight-bold">@t.ArrivalStation</td>
                                <td>@t.DepartureTime - @t.ArrivalTime</td>
                                <td>@t.Duration</td>
                                <td>@t.Price</td>
                                <td id="cardNumber">@t.CreditCard.Card_Number</td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-outline-danger" data-cid="@Model.Id" data-toggle="modal" id="@t.Id" data-target="#delete">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</td>