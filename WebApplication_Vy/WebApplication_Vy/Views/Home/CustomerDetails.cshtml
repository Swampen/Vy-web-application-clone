@model WebApplication_Vy.Models.DTO.TicketDTO

@{
    ViewBag.Title = "Index";
}

<script type="text/javascript">
    let tst = @Html.Raw(Json.Encode(@ViewBag.Model));
    $(function () {
        
        let tst = @Html.Raw(Json.Encode(@ViewBag.Model.Duration));
        const duration = "Duration: " + getDuration(tst);
        
        $('#duration').text(duration);
        
        $("#postalcode").on('input', function () {
            var postalcode = $("#postalcode").val();
            var jsonin = {
                Postalcode: postalcode
            };

            if (postalcode.match("[0-9]{4}")) {
                $.ajax({
                    url: "@Url.Action("searchzip", "home")",
                    type: 'POST',
                    data: JSON.stringify(jsonin),
                    contentType: "application/json;charset=utf-8",
                    success: function (response) {
                        console.log('setting postaltown');     
                        $('#postaltown').val(response);
                    }
                });
            } else {
                $('#postaltown').val("Undefined");
            }
        });
        
       
          $("#changeTrip").click(function() {
            console.log("Button clicked");
          });
        
    });
    
    function getDuration(duration) {
        let durationString = (duration["days"] != 0) ? days + " d " : "";
        durationString += (duration["hours"] != 0) ? hours + " h " : "";
        durationString += duration["minutes"] + " m ";
        return durationString;
    }
</script>

<div class="card bg-light mb-3" style="max-width: 18rem;">
    <div class="card-header">Din valgte reise</div>
    <div class="card-body">
        <h5 class="card-title">
            <span>
                <img id="tripIcon" src='@Url.Content("~/Content/Assets/train.svg")'></img> 
            </span>
            @ViewBag.Model.Departure_Station - @ViewBag.Model.Arrival_Station
        </h5>
        <p class="card-text">Dato: @ViewBag.Model.Date</p>
        <p class="card-text">Avreise: @ViewBag.Model.Departure_Time</p>
        <p class="card-text">Ankomst: @ViewBag.Model.Arrival_Time</p>
        <p class="card-text" id="duration">Reisetid: </p>
        <p class="card-text">Pris: @ViewBag.Model.Price</p>
        <button class="btn btn-primary" type="button" id="changeTrip">Endre reise</button>
    </div>
</div>

<div id="ajax_form">
    @using (Ajax.BeginForm("TicketResult", "Ticket", new AjaxOptions { HttpMethod = "POST", OnSuccess = "Success" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            
                <div class="form-group">
                    @Html.LabelFor(model => model.Customer.Givenname, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Customer.Givenname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Customer.Givenname, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Customer.Surname, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Customer.Surname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Customer.Surname, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Customer.Address, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Customer.Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Customer.Address, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Customer.Zipcode.Postalcode, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Customer.Zipcode.Postalcode, new { htmlAttributes = new { id = "postalcode", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Customer.Zipcode.Postalcode, "", new { @class = "text-danger" })
                        <label id="postaltown"></label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-success" />
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12 text-success">
                        @ViewBag.Records
                    </div>
                </div>

            </div>
    }
</div>